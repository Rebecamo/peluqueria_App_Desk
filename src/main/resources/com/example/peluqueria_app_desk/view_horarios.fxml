<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="631.0" prefWidth="740.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.peluqueria_app_desk.HorariosController">
   <children>
      <TableView fx:id="tblHorarios" layoutX="19.0" layoutY="75.0" prefHeight="241.0" prefWidth="699.0">
        <columns>
          <TableColumn fx:id="clidHorario" prefWidth="75.0" text="ID Horario" />
          <TableColumn fx:id="clidEmpleado" prefWidth="75.0" text="ID Empleado" />
            <TableColumn fx:id="clDiaSemana" prefWidth="75.0" text="Día de semana" />
            <TableColumn fx:id="clHoraEntrada" prefWidth="75.0" text="Hora de entrada" />
            <TableColumn fx:id="clHoraSalida" prefWidth="75.0" text="Hora de salida" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="btnAgregar" layoutX="560.0" layoutY="384.0" mnemonicParsing="false" onAction="#guardarHorario" prefHeight="45.0" prefWidth="130.0" text="Agregar horarios" />
      <Button fx:id="btnModificar" layoutX="560.0" layoutY="450.0" mnemonicParsing="false" onAction="#clickModificarHorario" prefHeight="45.0" prefWidth="130.0" text="Modificar horarios" />
      <Button fx:id="btnEliminar" layoutX="564.0" layoutY="518.0" mnemonicParsing="false" onAction="#clickEliminarHorario" prefHeight="45.0" prefWidth="123.0" text="Eliminar horarios" />
      <Label layoutX="238.0" layoutY="373.0" text="Seleccione día de disponibilidad" />
      <Label layoutX="244.0" layoutY="455.0" text="Coloque la hora de entrada al trabajo" />
      <Label layoutX="249.0" layoutY="523.0" text="Coloque su hora de salida del trabajo" />
      <MenuBar fx:id="menuBar" layoutY="2.0" prefHeight="25.0" prefWidth="740.0">
        <menus>
          <Menu mnemonicParsing="false" text="Inicio">
            <items>
              <MenuItem fx:id="menuItemInicio" mnemonicParsing="false" text="Inicio de sesión" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Gestionar reservas">
            <items>
              <MenuItem fx:id="menuItemGestionReservas" mnemonicParsing="false" text="Gestionar" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Historial reservas">
            <items>
              <MenuItem fx:id="menuItemHistorial" mnemonicParsing="false" text="Vizualizar" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Gestión">
              <items>
                <MenuItem fx:id="menuItemAtras" mnemonicParsing="false" text="Ir a gestión" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
      <ComboBox fx:id="cmbDiaSemana" layoutX="238.0" layoutY="406.0" prefHeight="25.0" prefWidth="215.0" />
      <TextField fx:id="txtIdHorario" layoutX="33.0" layoutY="406.0" />
      <TextField fx:id="txtIdEmpleado" layoutX="33.0" layoutY="486.0" />
      <Label layoutX="32.0" layoutY="373.0" text="ID Horario" />
      <Label layoutX="33.0" layoutY="455.0" text="ID Empleado" />
      <TextField fx:id="txtHoraInicio" layoutX="238.0" layoutY="486.0" prefHeight="25.0" prefWidth="215.0" />
      <TextField fx:id="txtHoraFin" layoutX="238.0" layoutY="556.0" prefHeight="25.0" prefWidth="215.0" />
   </children>
</AnchorPane>
